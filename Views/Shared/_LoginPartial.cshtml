@using Microsoft.AspNetCore.Identity
@using TBHAcademy.Areas.Identity.Data

@inject SignInManager<TBHAcademyUser> SignInManager
@inject UserManager<TBHAcademyUser> UserManager
<head>
     <link rel="stylesheet" href="~/css/site.css" />
      <link rel="icon" href="~/css/Log1 (2).png" type="image/x-icon"/>
      <link rel="stylesheet" href="~/css/Student/Loader.css" />
          <link rel="stylesheet" href="~/js/jquery-ui.css" />
      
</head>
<div class="collapse navbar-collapse justify-content-end" >
    <ul class="navbar-nav right">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item ">
        <a id="manage" class="nav-link text-dark" asp-controller="Dashboard" asp-action="Student"title="Manage">My Dashboard</a>
    </li>
    <li class="nav-item dropdown no-arrow">
                            <div class="nav-item dropdown no-arrow">
                                <a class="dropdown-toggle nav-link" aria-expanded="false" data-bs-toggle="dropdown" href="#">
                                    <span class="d-none d-lg-inline me-2 text-gray-600 small">
                                        @UserManager.GetUserAsync(User).Result.FirstName   @UserManager.GetUserAsync(User).Result.LastName
                                        (student)
                                    </span>
                                    @*<img class="border rounded-circle img-profile" src="~/css/User1 (2).png" style="width:40px">*@
                                </a>
                                <div class="dropdown-menu shadow dropdown-menu-end animated--grow-in">
                                    <a class="dropdown-item" href="#"><i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Profile</a><a class="dropdown-item" href="#"><i class="fas fa-cogs fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Settings</a><a class="dropdown-item" href="#"><i class="fas fa-list fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Activity log</a>
                                    <div class="dropdown-divider"></div><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Logout</a>
                                </div>
                            </div>
                        </li>
}
else
{
    <li class="nav-item" style="color:#7b96d4">
        <a class="button nav-link text-dark" id="register" asp-area="Identity"  asp-page="/Account/Register">Join Us</a>
    </li>
    <li class="nav-item"  style="color:#7b96d4">
        <a class="button nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
</div>
    <script src="~/js/Button1Loader.js" asp-append-version="true"></script>
    <script src="~/js/AncorLoader.js" asp-append-version="true"></script>
        <script src="~/js/jquery.blockUI.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.js" asp-append-version="true"></script>
