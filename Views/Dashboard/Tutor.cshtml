                    <div class="modal-footer ">

                        <a asp-controller="Student" asp-action="Enroll" class="button btn btn-primary text-center btn-block btn-small">Enroll New Module</a>

                    </div>
                </div>
            </div>
        </div>
        <!--Button to trigger the modal-->
