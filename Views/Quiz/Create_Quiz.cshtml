@model TBHAcademy.Models.Quiz
@{
    Layout = "_StudentLayout - Copy";
    string title = ViewBag.Action + " Course";
    ViewBag.Title = title.ToUpper();
}

<script type="text/javascript">
    $(document).on('click', '.number-spinner button', function() {
        var btn = $(this),
            oldValue = btn.closest('.number-spinner').find('input').val().trim(),
            newVal = 0;

        if (btn.attr('data-dir') == 'up') {
            newVal = parseInt(oldValue) + 1;
        } else {
            if (oldValue > 1) {
                newVal = parseInt(oldValue) - 1;
            } else {
                newVal = 1;
            }
        }
        btn.closest('.number-spinner').find('input').val(newVal);
    });
</script>


<div class="w-100 " style="background: rgba(6, 73, 181,0.5)">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ">Create Quiz</h5>
    </div>
</div>


@*<div class="container">
    <h2 class="text-white text-center text-dark jumbotron">@ViewBag.Title</h2>
</div>*@
<div class="container-fluid pt-2" style="background-color: white">
    <div class=" pt-5 col-md-6 col-sm-12">
        <form method="post" asp-action="Create_Quiz">
            <input type="hidden" asp-for="AssignedID" />
            <div class="form-group">
                <label class="text-black font-weight-bold" asp-for="QDescription"></label>
                <input asp-for="QDescription" class="form-control" />
                <span asp-validation-for="QDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white" asp-for="DActive"></label>
                <input asp-for="DActive" class="form-control" placeholder="dd/mm/yy" />
                <span asp-validation-for="DActive" class="text-danger"></span>
            </div>
            <!--change this to use model values -->
            <div class="cs-form form-group">
                <label class="text-white" asp-for="Time">Date Of Birth</label>
                <input asp-for="Time" type="time" class="form-control" value="10:05 AM" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">Activate Quiz</label>
                </div>
            </div>


            <div class="text-center p-4">
                <input type="hidden" asp-for="AssignedID" />
                <button type="submit" class=" btn btn-primary btn-md-lg btn-sm-sm text-center" id="AddCourse">Create Quiz</button>
                <a asp-action="ListCourse" class=" btn btn-outline-secondary ml-1">View Quizes</a>
                <button type="reset" class=" w-25 btn btn-outline-danger">Clear</button>
            </div>
        </form>
    </div>
</div>

