@model IEnumerable<TBHAcademy.Models.ManageContent>

@{
    ViewData["Title"] = @ViewBag.Tittle;
    Layout = ViewBag.Layout;
}

<!------------------------------------------------- Header --------------------------------------------------------------------------------------->
<div class="w-100 " style="background: rgba(6, 73, 181,0.5)">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ">@ViewBag.Header</h5>
    </div>
</div>
<!------------------------------------------------- accordion--------------------------------------------------------------------------------------->
<div class="dropdown">
<!-- Button trigger modal -->
<button type="button" id="Add" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#exampleModal">
  Addd new topic
</button>

</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div  id="Display"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>

<script defer>
$(document).ready(function() {
    $("#Add").click(function() {
        $('#Display').load("/Module/AddTopics");
    });
});
</script>