@model IEnumerable<TBHAcademy.Models.Modules>

@{
    ViewData["Title"] = "ListModules";
    Layout = "_HodLayout";
}

<div>
<div class="w-100 mb-2  " style="background: rgba(6, 73, 181,0.5)">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ">List Of Modules</h5>
    </div>
</div>

<div class="pl-3 pr-3">
<table id="myTable" class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
      @foreach (var modules in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modules.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modules.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modules.Year)
            </td>
                       
            <td>               
                <a asp-action="UpdateModule" class="button btn btn-outline-info  w-100" asp-route-id="@modules.ModuleId">Update</a>
                <br>
               @* <a asp-action="DeleteModule" class="button btn btn-outline-info  w-100" asp-route-id="@modules.ModuleId">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
</div>
</div>
<p>
    <a asp-action="InsertModule" class="button btn btn-outline-info">Add New Module</a>
</p>
<p>
    <a asp-action="Assign" class="button btn btn-outline-info">Assign Tutor</a>
</p>
