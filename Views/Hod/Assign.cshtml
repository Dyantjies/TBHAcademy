@using TBHAcademy.Areas.Identity.Data;
@model TBHAcademy.Models.AssignModules;

@{
    ViewData["Title"] = "Assign";
    Layout = "_HodLayout";
}
<div class="w-100 mb-2  " style="background: rgba(6, 73, 181,0.5)">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ">Assign Tutor</h5>
    </div>
</div>
<br />
<br />
<div class="row">
    <form asp-action="Assign">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="text-black" font-weight-bold  asp-for="TutorID">Tutors</label>
            <div class="dropdown">
                <select asp-for="TutorID" class="form-control">
                    @foreach (TBHAcademyUser U in ViewBag.Tutors)
                    {
                        <option value="@U.Id">@U.FirstName @U.LastName</option>
                    }

                </select>
                <span asp-validation-for="TBHAcademyUser.Id" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="text-black" font-weight-bold  asp-for="ModuleID">Modules</label>
            <div class="dropdown">
                <select asp-for="ModuleID" class="form-control">
                    @foreach (Modules item in ViewBag.Modules)
                    {
                        <option value="@item.ModuleId">@item.ModuleName</option>
                    }

                </select>
            </div>
        </div>
        <div class="form-group">
                <label asp-for="DateAssigned" class="control-label"></label>
                <input asp-for="DateAssigned" class="form-control" />
                <span asp-validation-for="DateAssigned" class="text-danger"></span>
            </div>
        <div class="form-group">
                <input type="submit" value="Assign" class="button btn btn-primary" />
        </div>
    </form>
    </div>
</div>