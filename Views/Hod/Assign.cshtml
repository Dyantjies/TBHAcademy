@model IEnumerable<TBHAcademy.Models.TutorModule>

@{
    ViewData["Title"] = "Assign";
    Layout = "_HodLayout";
}
<div class="w-100 mb-2  " style="background: rgba(6, 73, 181,0.5)">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ">@ViewBag.Message</h5>
    </div>
</div>
<br />
<br />
@foreach (var item in Model)
{
    <h2>
            <a href="#">
                @item.ModulesTM.ModuleCode - @item.ModulesTM.ModuleName
            </a>
        </h2>
    <div class="pb-2 fw-bold">
                    Module Name:  <a class="text-primary" href="#">@item.ModulesTM.ModuleName</a>
                </div>
                <div class="pb-2 fw-bold">
                    Module Code: <a class="text-primary" href="#">@item.ModulesTM.ModuleCode</a>

                </div>
                <div class="pb-2 fw-bold">
                    Module Description  : <a class="text-primary" href="#">None</a>
                </div>
                <div class="pb-2 fw-bold">
                    Tutor  : <a class="text-primary" href="#">@item.UserTM.LastName @item.UserTM.FirstName</a>
                </div>
                <div class="pb-2 fw-bold">
                    Course Name: <a class="text-primary" href="#">@item.CourseTM.CourseName</a>
                </div>
                <div class="pb-2 fw-bold">
                    Course Description: <a class="text-primary" href="#">@item.CourseTM.CourseDescription</a>
                </div>
                @*<div class="modal-footer"> 
                    <a asp-controller="Hod" asp-action="Assign" asp-route="@item.AssignTM.AssignedID" name="TutorModule" class="button btn btn-primary">Confirm</a>
                </div>*@

}
