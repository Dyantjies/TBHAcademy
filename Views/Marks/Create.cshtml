            </div>*@

            <div class="form-group">
                <label class="text-black font-weight-bold" asp-for="Comment"></label>

                <div class="dropdown">
                    <select asp-for="CommentId" class="form-control">
                        @foreach (Comment p in ViewBag.Comment)
                        {
                            <option value="@p.CommentId">@p.CommentText</option>
                        }
                    </select>
                    <span asp-validation-for="Comment.CommentText" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

