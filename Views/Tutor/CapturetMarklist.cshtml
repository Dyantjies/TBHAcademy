@model IEnumerable<TBHAcademy.Models.TeamMark>

@{
    ViewData["Title"] = "CapturetMarklist";
    Layout = "~/Views/Shared/_TutorLayoutcshtml.cshtml";
}

<h1>Results</h1>

<p>
    <a asp-action="InsertMark">Create New</a>
</p>

<div class=" row pt-2 ">

    <i onclick="window.print()" class='bx bxs-printer col-4' style='color:#01acff'></i>
    <img src="~/css/log2 (2).png" style="width:100px" class="rounded mx-auto d-block " alt="...">
  @*  <p class="text-end col-4">Date: 30 August 2022</p>*@
</div>

    @if (Model.Count() > 0)
    {
       
        {
            <div class="card-deck">
                @foreach (var teamMark in Model)
                   {
                    <div class="card border-3  border-primary">
                    
                 
                             <div class="card-header bg-white pl-2 pr-2">
                <h5 class="text text-center border-primary">@teamMark.StSurname, @teamMark.StName</h5>
                 
            </div>
            <div class="card-body bg-tr">
                <h6>Team 1: @teamMark.TeamOne</h6>
                <h6>Team 2: @teamMark.TeamTwo</h6>
                <h6>Team 3: @teamMark.TeamThree</h6>
                <h6>Team 4: @teamMark.TeamFour</h6>

            </div>
            <div class="card-footer bg-white">
                <div class="text-primary center">
                    <a asp-controller="Tutor" asp-action="TearmResultUpdate" asp-route-ID="@teamMark.Teamid" class="button btn btn-outline-primary mx-1">Edit</a>
                     <a asp-controller="Tutor" asp-action="DeleteTermMark" asp-route-ID="@teamMark.Teamid" class="button btn btn-outline-primary mx-1">Delete</a>
                </div>
            </div>
                    
               
        </div>
        }
            </div>
        }
    }
    else
    {
        <h5 class="text-danger">No Student Add Yet One the system.</h5>
        <a asp-controller="Tutor" asp-action="InserMark" class="button btn btn-primary w-25 pb-2 pr-2 pl-2 pt-2 justify-content-center">Insert a new fighter</a>
    }
 
